<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.cl.view.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginClServlet</servlet-name>
        <servlet-class>com.cl.controller.LoginClServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MainFrame</servlet-name>
        <servlet-class>com.cl.view.MainFrame</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageUsers</servlet-name>
        <servlet-class>com.cl.view.ManageUsers</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManageUsers</servlet-name>
        <url-pattern>/ManageUsers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginClServlet</servlet-name>
        <url-pattern>/LoginClServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MainFrame</servlet-name>
        <url-pattern>/MainFrame</url-pattern>
    </servlet-mapping>
</web-app>